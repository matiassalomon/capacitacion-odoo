<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="session_view_form">
            <field name="name">academy.session.form</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <form string="Clase">
                    <sheet>
                        <h1><field name="name" /></h1>
                        <group>
                            <group>
                                <field name="course_id" />
                            </group>
                            <group>
                                <field name="instructor_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Estudiantes">
                                <field name="students_ids" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="session_view_list">
            <field name="name">academy.session.list</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <tree string="Listado de clases">
                    <field name="name" />
                    <field name="instructor_id" />
                </tree>
            </field>
        </record>
    </data>
</odoo>
