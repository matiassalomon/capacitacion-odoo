<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Cursos</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay contenido aquí hasta que no cree su primer curso.
                </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Clases</field>
            <field name="res_model">academy.session</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_neutral_face">
                    No hay contenido aquí hasta que no cree su primer clase.
                </p>
            </field>
        </record>
        
        <menuitem name="Odoo Academy"
                  id="menu_academy"
                  sequence="1" />
        
        <menuitem name="Odoo Academy"
                  id="menu_academy_sub"
                  parent="menu_academy"
                  sequence="2" />
        
        <menuitem name="Cursos"
                  id="menu_academy_course"
                  parent="menu_academy_sub"
                  sequence="3" 
                  action="course_list_action" />
        
        <menuitem name="Clases"
                  id="menu_academy_sessions"
                  parent="menu_academy_sub"
                  sequence="4" 
                  action="session_list_action" />
            
    </data>
</odoo>
    