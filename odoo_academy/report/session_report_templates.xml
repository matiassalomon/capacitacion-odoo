    <template id="report_session_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 t-field="doc.name" class="mt16" />
                        <div class="row mt-32 mb32" id="session_info">
                            <div class="col-auto mw-100 mb-2">
                                <strong>Duración de la clase:</strong>
                                <t t-if="doc.start_date">
                                    <span t-field="doc.start_date" />
                                </t>
                                to
                                <t t-if="doc.end_date">
                                    <span t-field="doc.end_date" />
                                </t>
                            </div>
                            <div t-if="doc.instructor_id" class="col-auto mw-100 mb-2">
                                <strong>Instructor:</strong>
                                <span t-field="doc.instructor_id.name" />
                            </div>
                        </div>
                        <h4>Estudiantes</h4>
                        <table class="table table-small o_main_table">
                            <thead>
                                <tr>
                                    <th name="th_name">Nombre</th>
                                    <th name="th_phone">Teléfono</th>
                                    <th name="th_email">E-Mail</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.students_ids" t-as="student">
                                    <tr>
                                        <td t-if="student.name" name="td_name" >
                                            <span t-field="student.name" />
                                        </td>
                                        <td t-if="student.phone" name="td_phone">
                                            <span t-field="student.phone" />
                                        </td>
                                        <td t-if="student.email" name="td_email">
                                            <span t-field="student.email" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
